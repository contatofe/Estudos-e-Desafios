def get_image_data():
  paths = [os.path.join('Imagens', f) for f in os.listdir('Imagens')]
  faces = []
  labels = []
  for path in paths:
    img = Image.open(path).convert('L')
    img_np = np.array(img, 'uint8') #Transformando imagem em um array do numpy
    id = int(os.path.split(path)[1].split('.')[1]) #Separando o nÃºmero de cada pessoa do nome
    labels.append(id)
